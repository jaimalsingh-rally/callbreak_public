<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    android:id="@+id/layoutLudoMain"
    tools:context="com.waterbird.callbreak.LudoMainActivity"
    android:background="@drawable/background_theme_2">

    <Button
        android:id="@+id/multiplayerBtn"
        style="@color/AliceBlue"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_below="@+id/playCallbreak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/mb1_14_4"
        android:enabled="true"
        android:text="Play Multiplayer"
        android:textColor="@color/LightGrey"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TableLayout
        android:id="@+id/side_btn_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playCallbreak"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-138dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/themeChange"
                style="@color/AliceBlue"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/mb_rnd"
                android:cropToPadding="false"
                android:enabled="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/bgd_btn"
                android:textColor="@color/Chartreuse"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:typeface="serif" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/settingsMain"
                style="@color/AliceBlue"
                android:layout_width="56dp"
                android:layout_height="56dp"

                android:layout_margin="5dp"
                android:background="@drawable/mb_rnd"
                android:cropToPadding="false"
                android:enabled="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/gear"
                android:textColor="@color/Chartreuse"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/rulesPopup"
                style="@color/AliceBlue"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:background="@drawable/mb_rnd"
                android:cropToPadding="false"
                android:enabled="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/rules130"
                android:textColor="@color/Chartreuse"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:typeface="serif" />
        </TableRow>
    </TableLayout>


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_above="@+id/playCallbreak"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_callbreak" />

    <Button
        android:id="@+id/playCallbreak"
        style="@color/AliceBlue"
        android:layout_width="125dip"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mb1_14_3"
        android:text="Play"
        android:textColor="@color/Chartreuse"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/unit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
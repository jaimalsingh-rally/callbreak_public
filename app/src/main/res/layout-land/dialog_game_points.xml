<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background_box"
    android:padding="10px">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score Card"
        android:textColor="#fff"
        android:textSize="25dp"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_table"
        android:background="@drawable/forground_box">
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_table_exit">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/table_row_exit">

            <Button
                android:id="@+id/closePopupBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/mb1_14_3"
                android:text="Close"
                android:textSize="@dimen/small_text_size"
                android:visibility="invisible" />

            <Button
                android:id="@+id/nextRoundPopupBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/mb1_14_3"
                android:text="Next Round"
                android:textSize="@dimen/small_text_size"
                android:visibility="invisible" />

            <Button
                android:id="@+id/newGamePopupBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/mb1_14_3"
                android:text="New Game"
                android:textSize="@dimen/small_text_size"
                android:visibility="invisible" />

            <Button
                android:id="@+id/exitPopupBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/mb1_14_3"
                android:text="Exit"
                android:textSize="@dimen/small_text_size"
                android:visibility="invisible" />
        </TableRow>
    </TableLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:padding="@dimen/outer_layout_padding"
    android:id="@+id/dialog_rules_layout">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollViewLayout">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/box_margins"
        android:background="@drawable/background_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/box_margins"
            android:background="@drawable/background_box_2">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/info_instructions_title"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/game_play_instructions"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/textViewSetHead"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Trump"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/textViewSet"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/trump_instructions"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="The Call"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/call_instructions"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Game play"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/game_play_instructions"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Scoring"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/scoring_instructions"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/rulesCloseBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView"
        android:layout_alignRight="@+id/scrollView"
        android:layout_gravity="top|right"
        android:background="@drawable/cross_btn" />
</RelativeLayout>

</RelativeLayout>
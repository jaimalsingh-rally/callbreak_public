<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="20dip" />

            <stroke android:width="5dip" android:color="@color/DarkGray" />

            <gradient android:angle="-90" android:endColor="@color/Gray" android:startColor="@color/Gray" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="20dip" />

            <stroke android:width="5dip" android:color="#00897B" />

            <gradient android:angle="-90" android:endColor="#00897B" android:startColor="@color/Gray" />
        </shape></item>

</selector>